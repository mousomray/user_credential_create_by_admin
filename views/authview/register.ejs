<!DOCTYPE html>
<html lang="en">
  <body>
    
    <!-- Flash Messages -->
    <% if (sucess && sucess != '') { %>
    <div
      class="alert alert-success"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= sucess %>
    </div>
    <% } else if (err && err != '') { %>
    <div
      class="alert alert-danger"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= err %>
    </div>
    <% } %>

    <!-- Registration Form Section -->
    <div
      style="
        display: flex;
        justify-content: center;
        align-items: flex-start;
        margin-top: 50px;
        padding: 20px;
      "
    >
      <div
        style="
          background-color: #ffffff;
          padding: 30px;
          border-radius: 10px;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
          max-width: 400px;
          width: 100%;
        "
      >
        <h2
          style="
            text-align: center;
            margin-bottom: 20px;
            color: #333333;
            font-size: 24px;
          "
        >
          Admin Register
        </h2>
        <form
          action="/registrationcreate"
          method="POST"
          enctype="multipart/form-data"
        >
          <!-- First name Field -->
          <div style="margin-bottom: 20px">
            <label
              for="name"
              style="display: block; margin-bottom: 5px; color: #555555"
              >First Name</label
            >
            <input
              type="text"
              id="first_name"
              name="first_name"
              placeholder="Enter your first name"
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Last Name Field -->
          <div style="margin-bottom: 20px">
            <label
              for="name"
              style="display: block; margin-bottom: 5px; color: #555555"
              >Last Name</label
            >
            <input
              type="text"
              id="last_name"
              name="last_name"
              placeholder="Enter your last name"
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Email Field -->
          <div style="margin-bottom: 20px">
            <label
              for="email"
              style="display: block; margin-bottom: 5px; color: #555555"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Enter your email"
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Password Field -->
          <div style="margin-bottom: 20px">
            <label
              for="password"
              style="display: block; margin-bottom: 5px; color: #555555"
              >Password</label
            >
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Enter your password"
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Image Upload Field -->
          <div style="margin-bottom: 20px">
            <label
              for="image"
              style="display: block; margin-bottom: 5px; color: #555555"
              >Profile pic</label
            >
            <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Register Button -->
          <button
            type="submit"
            style="
              width: 100%;
              padding: 10px;
              background-color: #4a4a8c;
              color: #ffffff;
              border: none;
              border-radius: 5px;
              font-size: 18px;
              cursor: pointer;
              transition: background-color 0.3s;
            "
          >
            Register
          </button>

          <!-- Login Link -->
          <p
            style="
              text-align: center;
              margin-top: 15px;
              color: #555555;
              font-size: 14px;
            "
          >
            Already have an account?
            <a
              href="/admin/signin"
              style="color: #4a4a8c; text-decoration: none; font-weight: bold"
              >Login here</a
            >
          </p>
        </form>
      </div>
    </div>

    
  </body>
</html>
